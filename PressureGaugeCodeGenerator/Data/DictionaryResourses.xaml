<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PressureGaugeCodeGenerator">
    <Style x:Key="menuItem">
        <Setter Property="ItemsControl.FontSize"
                Value="13"/>
        <Setter Property="ItemsControl.FontFamily" 
                Value="Verdana"/>
    </Style>
    <Style x:Key="labels" 
           TargetType="Label">
        <Setter Property="ItemsControl.FontFamily" 
                Value="Verdana"/>
        <Setter Property="ItemsControl.FontSize" 
                Value="13"/>
        <Setter Property="ItemsControl.HorizontalAlignment" 
                Value="Left"/>
        <Setter Property="ItemsControl.VerticalAlignment"  
                Value="Top"/>
    </Style>
    <Style x:Key="buttons" 
           TargetType="Button">
        <Setter Property="ItemsControl.FontFamily" 
                Value="Verdana"/>
        <Setter Property="ItemsControl.FontSize" 
                Value="13"/>
        <Setter Property="ItemsControl.Height" 
                Value="30"/>
        <Setter Property="ItemsControl.Width" 
                Value="139"/>
        <Setter Property="ItemsControl.VerticalAlignment" 
                Value="Bottom"/>
        <Setter Property="ItemsControl.HorizontalAlignment" 
                Value="Left"/>
    </Style>
    <Style x:Key="textBoxs" 
           TargetType="TextBox">
        <Setter Property="ItemsControl.HorizontalAlignment" 
                Value="Left"/>
        <Setter Property="ItemsControl.VerticalAlignment" 
                Value="Top"/>
        <Setter Property="ItemsControl.FontFamily" 
                Value="Verdana"/>
        <Setter Property="ItemsControl.FontSize" 
                Value="13"/>
        <Setter Property="TextAlignment" 
                Value="Center"/>
        <Setter Property="TextWrapping" 
                Value="NoWrap"/>
    </Style>
    <Style x:Key="textBlocks" 
           TargetType="TextBlock">
        <Setter Property="ItemsControl.HorizontalAlignment" 
                Value="Center"/>
        <Setter Property="ItemsControl.VerticalAlignment" 
                Value="Top"/>
        <Setter Property="ItemsControl.FontFamily" 
                Value="Verdana"/>
        <Setter Property="ItemsControl.FontSize" 
                Value="14"/>
        <Setter Property="TextAlignment" 
                Value="Center"/>
        <Setter Property="TextWrapping" 
                Value="NoWrap"/>
    </Style>
    <Style x:Key="comboBoxs" 
           TargetType="ComboBox">
        <Setter Property="ItemsControl.HorizontalAlignment" 
                Value="Left"/>
        <Setter Property="ItemsControl.VerticalAlignment" 
                Value="Top"/>
        <Setter Property="ItemsControl.FontFamily" 
                Value="Verdana"/>
        <Setter Property="ItemsControl.FontSize" 
                Value="13"/>
    </Style>
</ResourceDictionary>