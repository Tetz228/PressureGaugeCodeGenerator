<Window x:Class="PressureGaugeCodeGenerator.Views.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PressureGaugeCodeGenerator.ViewModels"
        xmlns:com="clr-namespace:PressureGaugeCodeGenerator.Infrastructure.Commands"
        xmlns:local="clr-namespace:PressureGaugeCodeGenerator.Views.Windows"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="626.066" Width="566.591" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.DataContext>
        <vm:HelpWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Text="{Binding Support}" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="550" Width="530"/>
        <Button x:Name="OKButton" Click="OKButton_Click" Content="OK" Margin="0,0,10,10" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
    </Grid>
</Window>
